{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "lib": ["ES2020", "DOM"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    }
}
